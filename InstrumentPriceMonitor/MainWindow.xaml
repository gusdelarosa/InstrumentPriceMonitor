<Window x:Class="InstrumentPriceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstrumentPriceMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding SubscribedInstruments }" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="235" Margin="10,30,0,0" VerticalAlignment="Top" Width="720">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Exchange" Binding="{Binding SourceName}"/>                
                <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdated}"/>
            </DataGrid.Columns>
            
        </DataGrid>

    </Grid>
</Window>
